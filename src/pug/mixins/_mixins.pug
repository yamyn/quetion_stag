			g
				polyline(fill='none', stroke='#FFFFFF', stroke-width='3', stroke-miterlimit='10', points='22.2,1.1 34,12.9 22.2,24.7')

mixin feedback-block-headline(name="Lorem")
	h2.page-headline.ta-c= name

mixin feedback-block-content(name="Lorem")
	p= name